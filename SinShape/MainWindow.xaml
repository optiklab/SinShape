                <Slider 
                    Name="SuperSlider"
                    Height="23" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="500"                        
                    Value="0"
                    Minimum="0"
                    Maximum="100" 
                    ValueChanged="SuperSlider_ValueChanged" IsEnabled="False" />
            </Viewport2DVisual3D>

