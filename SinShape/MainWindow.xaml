            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="300"
            Height="200"/>  
        <Label
            Name="NoSignalLabel"
            Foreground="Aqua"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >No signal</Label>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1">
            <ToggleButton 
                Name="Button1"
                x:Uid="Switcher1"
                Margin="10,0,0,0"
                Width="50"
                Height="120"
                Template="{StaticResource SwitcherTemplate}" 
                Checked="Button1_Checked" 
                Unchecked="Button1_Unchecked">
            </ToggleButton>

            <ToggleButton 
                Name="Button2"
                Margin="15,0,0,0"
                Width="50"
                Height="120"
                Template="{StaticResource SwitcherTemplate}" 
                Checked="Button2_Checked" 
                Unchecked="Button2_Unchecked">
            </ToggleButton>

            <ToggleButton 
                Name="Button3"
                Margin="15,0,0,0"
                Width="50"
                Height="120"
                Template="{StaticResource SwitcherTemplate}" 
                Checked="Button3_Checked" 
                Unchecked="Button3_Unchecked">
            </ToggleButton>

            <Button 
                Name="Button4"
                Margin="15,0,0,0"
                Width="100"
                Height="120"
                Content="Cancel" 
                Template="{StaticResource CancelButtonTemplate}"
                Click="Button4_Click">
            </Button>
        </StackPanel>
        
