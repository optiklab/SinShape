            Grid.Row="1"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">Speed</Label>
            <TextBox
                Grid.Row="0"
                Grid.Column="2"
                Margin="10" 
                FontSize="18"
                Width="85"
                Height="25"
                Name="textValue"
                Background="Black"
                Foreground="Aqua"
                Text="{Binding ElementName=SuperSlider, UpdateSourceTrigger=PropertyChanged, Path=Value}" 
                MaxLength="5" />
            <Rectangle
                Name="SpeedRectangle"
                Grid.Row="0"
                Grid.Column="2"
                Width="85"
                Height="25"
                Fill="Black"></Rectangle>
            <Label
                Grid.Column="0"
                Grid.Row="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">Amp</Label>
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Margin="10"
                MaxLength="5"
                FontSize="18"
                Width="85"
                Height="25"
                Background="Black"
                Foreground="Aqua"
                Name="amplitudeValue">
                <TextBox.Text>
                    <Binding Path="Amplify">
                        <Binding.RelativeSource>
                            <RelativeSource Mode="FindAncestor" AncestorType="{x:Type Window}"/>
                        </Binding.RelativeSource>
                        <Binding.UpdateSourceTrigger>
                            <UpdateSourceTrigger>PropertyChanged</UpdateSourceTrigger>
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Rectangle
                Name="AmplitudeRectangle"
                Grid.Row="1"
                Grid.Column="2"
                Width="85"
                Height="25"
                Fill="Black"></Rectangle>            
            <Label
                Grid.Column="0"
                Grid.Row="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">Freq</Label>
            <TextBox
                Grid.Row="2"
                Grid.Column="2"
                Background="Black"
                Foreground="Aqua"
                Margin="10"
                MaxLength="5"
                FontSize="18"
                Width="85"
                Height="25"
                Name="phaseValue">
                <TextBox.Text>
                    <Binding Path="Freq">
                        <Binding.RelativeSource>
                            <RelativeSource Mode="FindAncestor" AncestorType="{x:Type Window}"/>
                        </Binding.RelativeSource>
                        <Binding.UpdateSourceTrigger>
                            <UpdateSourceTrigger>PropertyChanged</UpdateSourceTrigger>
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Rectangle
                Name="PhaseRectangle"
                Grid.Row="2"
                Grid.Column="2"
                Width="85"
                Height="25"
                Fill="Black"></Rectangle>

            <Button
                Name="MinusSpeedButton"
                Grid.Row="0"
                Grid.Column="1"
                Template="{StaticResource SpinButtonTemplate}" Click="MinusSpeedButton_Click" IsEnabled="False">-
            </Button>

            <Button
                Name="PlusSpeedButton"
                Grid.Row="0"
                Grid.Column="3"
                Template="{StaticResource SpinButtonTemplate}" Click="PlusSpeedButton_Click" IsEnabled="False">+
            </Button>

            <Button
                Name="MinusAmpButton"
                Grid.Row="1"
                Grid.Column="1"
                Template="{StaticResource SpinButtonTemplate}" Click="MinusAmpButton_Click" IsEnabled="False">-
            </Button>

            <Button
                Name="PlusAmpButton"
                Grid.Row="1"
                Grid.Column="3"
                Template="{StaticResource SpinButtonTemplate}" Click="PlusAmpButton_Click" IsEnabled="False">+
            </Button>

            <Button
                Name="MinusFreqButton"
                Grid.Row="2"
                Grid.Column="1"
                Template="{StaticResource SpinButtonTemplate}" Click="MinusFreqButton_Click" IsEnabled="False">-
            </Button>

            <Button
                Name="PlusFreqButton"
                Grid.Row="2"
                Grid.Column="3"
                Template="{StaticResource SpinButtonTemplate}" Click="PlusFreqButton_Click" IsEnabled="False">+
            </Button>
        </Grid>
    </Grid>
</Window>
