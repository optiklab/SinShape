                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.5,1">
                    <GradientStop Color="White" Offset="0.1" ></GradientStop>
                    <GradientStop Color="BurlyWood" Offset="0.5"></GradientStop>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

            <!-- 1 -->
